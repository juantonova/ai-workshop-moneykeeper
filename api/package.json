{
  "name": "@moneykeeper/api",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "lint": "pnpm exec eslint \"./src/**/*.ts\"",
    "format": "pnpm exec prettier --write \"./src/**/*.ts\" \"README.md\"",
    "format:check": "pnpm exec prettier --check \"./src/**/*.ts\" \"README.md\"",
    "prisma:generate": "pnpm exec prisma generate",
    "prisma:migrate:dev": "pnpm exec prisma migrate dev",
    "prisma:migrate:deploy": "pnpm exec prisma migrate deploy",
    "codegen:openapi": "node ./scripts/generate-openapi.js",
    "generate:openapi": "pnpm run codegen:openapi",
    "build": "pnpm run prisma:generate && pnpm run codegen:openapi && pnpm exec tsc",
    "test": "pnpm exec tsx --test src/**/*.test.ts",
    "dev": "pnpm run build && node dist/main.js",
    "start": "node dist/main.js",
    "quality": "pnpm lint && pnpm format:check && pnpm test && pnpm build"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.14",
    "@nestjs/core": "^11.1.14",
    "@nestjs/platform-express": "^11.1.14",
    "@nestjs/swagger": "^11.2.6",
    "@prisma/client": "^7.4.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.14",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.1",
    "prisma": "^7.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2"
  }
}
