{
  "name": "moneykeeper-workspace",
  "private": true,
  "packageManager": "pnpm@10.6.2",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "install:all": "pnpm install",
    "validate:env": "node ./scripts/validate-env.cjs",
    "healthcheck": "node ./scripts/healthcheck.cjs",
    "up:dev": "pnpm run validate:env && pnpm run healthcheck && pnpm -r --parallel dev",
    "generate:openapi": "pnpm --filter @moneykeeper/api run generate:openapi",
    "generate:contracts": "pnpm --filter @expense/contracts run build",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "format:check": "pnpm -r format:check",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "quality": "pnpm lint && pnpm format:check && pnpm test && pnpm build",
    "dev": "pnpm run up:dev"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.2",
    "prettier": "^3.8.1"
  }
}
